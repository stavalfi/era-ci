{
  "name": "era-ci-root",
  "private": true,
  "version": "2.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "lint:code": "eslint --cache --max-warnings 0 'packages/*/**/*.{ts,js,json,d.ts}'",
    "lint:versions": "syncpack list-mismatches",
    "lint:staged-files": "yarn lint-staged && yarn pretty-quick --staged && yarn build && yarn lint:versions",
    "test": "jest",
    "clean": "yarn workspace scripts clean",
    "run-era-ci": "time node --trace-warnings --unhandled-rejections=strict packages/core/dist/src/index.js",
    "run-era-ci:secrethub": "node_modules/@secrethub/cli/bin/secrethub run --ignore-missing-secrets -- yarn run-era-ci",
    "run-task-worker": "time node --unhandled-rejections=strict packages/task-worker/dist/src/index.js",
    "run-task-worker:secrethub": "node_modules/@secrethub/cli/bin/secrethub run --ignore-missing-secrets -- yarn run-task-worker",
    "build:tsc": "yarn tsc -b tsconfig-build.json",
    "build": "yarn build:tsc && chmod +x packages/core/dist/src/index.js",
    "build:watch": "yarn build:tsc --watch",
    "test-resources:up": "docker-compose -f ./packages/tests/legacy-tests/__tests__/prepare-test/docker-compose.yml up -d",
    "test-resources:down": "docker-compose -f ./packages/tests/legacy-tests/__tests__/prepare-test/docker-compose.yml down",
    "test-resources:reset": "yarn test-resources:down && yarn test-resources:up"
  },
  "repository": {
    "url": "https://github.com/stavalfi/era-ci"
  },
  "workspaces": [
    "packages/*",
    "packages/tests/e2e-tests-infra",
    "packages/tests/era-ci-tests",
    "packages/tests/quay-mock-service"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged-files"
    }
  },
  "devDependencies": {
    "@secrethub/cli": "^0.41.2",
    "@types/async": "^3.2.3",
    "@types/aws-lambda": "^8.10.64",
    "@types/bunyan": "^1.8.6",
    "@types/chance": "^1.0.8",
    "@types/debug": "^4.1.5",
    "@types/express": "~4.0.0",
    "@types/find-project-root": "^1.1.0",
    "@types/fs-extra": "^8.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/ioredis": "^4.17.10",
    "@types/ip-address": "^5.8.2",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14.0.13",
    "@types/randomcolor": "^0.5.5",
    "@types/redis": "^2.8.28",
    "@types/semver": "^7.2.0",
    "@types/sinon": "^9.0.10",
    "@types/tap": "^14.10.1",
    "@types/tape": "^4.13.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "esbuild": "^0.8.32",
    "esbuild-register": "^1.2.1",
    "eslint": "7.8.1",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-spellcheck": "^0.0.17",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^9.5.0",
    "prettier": "2.1.1",
    "pretty-quick": "3.0.0",
    "syncpack": "^5.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
