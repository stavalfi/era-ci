{
  "name": "era-ci-root",
  "private": true,
  "version": "2.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "lint:code": "eslint --cache --max-warnings 0 'packages/*/**/*.{ts,js,json,d.ts}'",
    "lint:versions": "syncpack list-mismatches",
    "lint:staged-files": "yarn lint-staged && yarn pretty-quick --staged && yarn build && yarn lint:versions",
    "test": "ava --verbose --timeout 20s",
    "clean": "yarn workspace scripts clean",
    "run-era-ci": "node --trace-warnings --unhandled-rejections=strict packages/core/dist/src/index.js",
    "run-era-ci:secrethub": "secrethub run -- yarn run-era-ci",
    "run-task-worker": "node --unhandled-rejections=strict packages/task-worker/dist/src/index.js",
    "build:tsc": "yarn tsc -b tsconfig-build.json",
    "build": "yarn build:tsc && chmod +x packages/core/dist/src/index.js",
    "build:watch": "yarn build:tsc --watch",
    "test-resources:up": "docker-compose -f ./packages/tests/legacy-tests/__tests__/prepare-test/docker-compose.yml up -d",
    "test-resources:down": "docker-compose -f ./packages/tests/legacy-tests/__tests__/prepare-test/docker-compose.yml down",
    "test-resources:reset": "yarn test-resources:down && yarn test-resources:up"
  },
  "repository": {
    "url": "https://github.com/stavalfi/era-ci"
  },
  "workspaces": [
    "packages/*",
    "packages/tests/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged-files"
    }
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/aws-lambda": "^8.10.64",
    "@types/bunyan": "^1.8.6",
    "@types/chance": "^1.0.8",
    "@types/ci-info": "^2.0.0",
    "@types/debug": "^4.1.5",
    "@types/express": "~4.0.0",
    "@types/find-project-root": "^1.1.0",
    "@types/fs-extra": "^8.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/ioredis": "^4.17.10",
    "@types/ip-address": "^5.8.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14.0.13",
    "@types/randomcolor": "^0.5.5",
    "@types/redis": "^2.8.28",
    "@types/semver": "^7.2.0",
    "@types/sinon": "^9.0.10",
    "@types/tap": "^14.10.1",
    "@types/tape": "^4.13.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "ava": "git://github.com/stavalfi/ava.git#c805d5654aab82ad92363708fd5ed2453ef189a9",
    "chance": "^1.1.5",
    "ci-info": "https://github.com/watson/ci-info.git",
    "create-folder-structure": "^3.0.5",
    "eslint": "7.8.1",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-spellcheck": "^0.0.17",
    "execa": "^4.0.1",
    "expect": "^26.6.2",
    "fast-glob": "^3.2.2",
    "fs-extra": "^9.0.0",
    "husky": "^4.3.0",
    "ioredis": "^4.19.4",
    "lint-staged": "^9.5.0",
    "node-git-server": "^0.6.1",
    "package-json-type": "^1.0.3",
    "prettier": "2.1.1",
    "pretty-quick": "3.0.0",
    "semver": "^7.3.2",
    "sinon": "^9.2.3",
    "syncpack": "^5.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "why-is-node-running": "^2.2.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
